<article id='lead'>
	<h1>{{model.fullName}}</h1>
	<p>Name: {{model.fullName}}</p>
	<p>Email: {{model.email}}</p>
	<p>Phone: {{model.phone}}</p>
	<p>Status: {{view Ember.Select content=model.STATUSES value=model.status}}</p>
	<p>Notes: {{textarea value=model.notes}}</p>
	<button {{action 'saveChanges'}}>Save</button>

	<button {{action 'delete'}}>Delete</button>
</article>